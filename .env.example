# Environment Configuration for saturn-mousehunter-auth-service
# Copy this file to .env and adjust values for your environment

# Service Configuration
APP_PORT=8001
TZ_DEFAULT=Asia/Shanghai
LOG_LEVEL=INFO
REQUEST_ID_HEADER=X-Request-ID

# Service Identity
SERVICE_NAME=saturn-mousehunter-auth-service
SERVICE_VERSION=0.1.0
SERVICE_ENVIRONMENT=development

# Database Configuration
DATABASE_DRIVER=postgresql+asyncpg
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=saturn_auth
DATABASE_USER=admin
DATABASE_PASSWORD=your_password_here
DATABASE_MAX_CONNECTIONS=10
DATABASE_MIN_CONNECTIONS=5

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
JWT_REFRESH_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_EXPIRE_HOURS=24

# Redis Configuration (if needed for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_PATH=logs/auth-service.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Admin User Configuration (for initial setup)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@saturn-mousehunter.com
ADMIN_PASSWORD=change-this-password

# External Services
SHARED_SERVICE_BASE_URL=http://localhost:8000
MARKET_DATA_SERVICE_URL=http://localhost:8002

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# Monitoring
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
TRACING_ENABLED=false