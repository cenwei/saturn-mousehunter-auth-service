# Environment Configuration for saturn-mousehunter-auth-service
# Copy this file to .env and adjust values for your environment

# Service Configuration
APP_PORT=8001
TZ_DEFAULT=Asia/Shanghai
LOG_LEVEL=DEBUG
REQUEST_ID_HEADER=X-Request-ID

# Service Identity
SERVICE_NAME=saturn-mousehunter-auth-service
DOMAIN=auth-service

# API Configuration
API_PREFIX=/api/v1
HEALTHZ_PATH=/healthz
READYZ_PATH=/readyz
METRICS_PATH=/metrics

# Authentication Database Configuration (PostgreSQL)
AUTH_DB_HOST=192.168.8.188
AUTH_DB_PORT=30032
AUTH_DB_NAME=mh_central
AUTH_DB_USER=postgres
AUTH_DB_PASSWORD=ChangeMe_StrongPwd!
AUTH_DB_MIN_CONNECTIONS=5
AUTH_DB_MAX_CONNECTIONS=20
AUTH_DB_SSL_MODE=prefer
AUTH_DB_CONNECTION_TIMEOUT=30
AUTH_DB_QUERY_TIMEOUT=60

# JWT Configuration
AUTH_JWT_SECRET_KEY=super-secret-jwt-key-change-in-production
AUTH_JWT_ALGORITHM=HS256
AUTH_JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
AUTH_JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
AUTH_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://192.168.8.168:8001"]
AUTH_CORS_ALLOW_CREDENTIALS=true
AUTH_CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
AUTH_CORS_ALLOW_HEADERS=["*"]

# Observability
TRACER_SERVICE_NAME=saturn-mousehunter-auth-service
TRACER_EXPORTER=none
TRACER_OTLP_ENDPOINT=
METRICS_ENABLED=true

# Development/Debug
DEBUG=true
RELOAD=false

# Container settings
CONTAINER_NAME=saturn-mousehunter-auth-service
CONTAINER_PORT=8001

# CI/CD Settings
BUILD_DATE=
BUILD_REF=
BUILD_VERSION=1.0.0